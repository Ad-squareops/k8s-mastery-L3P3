pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          name: docker
        spec:
          containers:
          - name: docker
            image: docker
            args: ["sleep", "10000"]
            volumeMounts:
             - mountPath: /var/run/docker.sock
               name: docker-socket
          restartPolicy: Never
          volumes:
          - name: docker-socket
            hostPath:
              path: /var/run/docker.sock
        '''
    }
  }
  environment{
        Docker_Cred=credentials('DockerCred')
  }
  stages {
        stage('Go to repo'){
            steps{
                container('docker') {
                    script{
                        echo "take code from github"
                        sh  '''
                        apk add -U git
                        rm -rf k8s-mastery-L3P3/
                        git clone $Branch https://github.com/Ad-squareops/k8s-mastery-L3P3.git
                        '''
                        echo "Branch copied"
                        
                    }
                    
                }
                
            }
        }
        stage('Docker Version'){
            steps{
                container('docker') {
                    sh 'docker --version'
                }
            }
        }
        stage('Login to DockerHub'){
            steps{
                container('docker') {
                    script{
                        echo "Login to DockerHub"
                        sh  ''' 
                        echo $Docker_Cred_PSW | docker login -u $Docker_Cred_USR --password-stdin
                        '''
                        
                    }
                    
                }
                
            }
        }
        stage('Build Image and push to dockerhub'){
            steps{
                container('docker') {
                    script{
                        echo "Test code from github"
                        sh  '''
                        cd k8s-mastery-L3P3/sa-webapp/
                        docker build -t sa-webapp .
                        docker tag sa-webapp akdokrhub/sa-webapp:${BUILD_NUMBER}
                        docker push akdokrhub/sa-webapp:${BUILD_NUMBER}
                        '''
                        
                    }
                    
                }
                
            }
            
        }
          stage("Update Image Tag"){
            steps{
                container('docker'){
                    withCredentials([gitUsernamePassword(credentialsId: 'GitHubCred')]) {
                    script{
                        echo "Test code from github"
                        sh '''
                        apk add -U yq
                        cd helm/helm/front/
                        yq e -i '(.image.tag = "'${BUILD_NUMBER}'")' values.yaml
                        git config --global user.email "aditya.jain@squareops.com"
                        git config --global user.name "Ad-squareops"
                        git add .
                        git commit -m "updating image tag in values.yml"
                        git push
                        '''
                        
                    }
                        
                    }
                    
                }
                
            }
              
          }
    }
}
